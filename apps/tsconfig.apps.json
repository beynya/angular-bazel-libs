{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    // "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@my/*": ["../libs/*"],
      // "@my/lib-a": [ "../libs/lib-a/index.ts" ],
      // "@my/lib-a/*": [ "../libs/lib-a/*" ]
    },
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
