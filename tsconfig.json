{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      // "@my/*": ["libs/*"],
      // "@my/*": ["./libs/*"],
      // "@my/lib-a": ["./libs/lib-a"],
      "@my/lib-a": [ "./libs/lib-a/index.ts" ],
      "@my/lib-a/*": [ "./libs/lib-a/*" ],
      "@my/lib-b": [ "./libs/lib-b/index.ts" ],
      "@my/lib-b/*": [ "./libs/lib-b/*" ],
      "@my/lib-c": [ "./libs/lib-c/index.ts" ],
      "@my/lib-c/*": [ "./libs/lib-c/*" ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
